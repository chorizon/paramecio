<div class="form">
    {% for form in forms.values() %}
        {% if form.type!='hidden' %}
            <p><label>{{form.label}}{% if form.required %}*{% endif %}</label>{{form.form()|safe}} <span class="error" id="{{form.name}}_error">{{form.txt_error}}</span></p>
        {% else %}
            {{form.form()|safe}}
        {% endif %}
    {% endfor %}
</div>
